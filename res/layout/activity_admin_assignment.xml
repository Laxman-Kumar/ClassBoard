<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.shared.myprojectversion_1.AdminAssignmentActivity">

    <Spinner
        android:id="@+id/semesterSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        />

    <Spinner
        android:id="@+id/spinnerSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        />

    <EditText
        android:id="@+id/inputAssignmentNo"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Ente Assignemnt no"
        />
    <EditText
        android:id="@+id/inputDesc"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Enter description"
        />
    <EditText
        android:id="@+id/inputpostedBy"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Enter posted by"
        />

    <Button
        android:id="@+id/submitData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <ProgressBar
        android:id="@+id/progressBar2"

        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
