<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shared.myprojectversion_1.AdminEventActivity">

    <Spinner
        android:id="@+id/spinnerClub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        />

    <EditText
        android:id="@+id/inputEventname"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Enter Event name"
        />

    <EditText
        android:id="@+id/inputEventDesc"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Enter description"
        />
    <EditText
        android:id="@+id/inputEventpostedBy"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Enter posted by"
        />

    <Button
        android:id="@+id/submitData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <ProgressBar
        android:id="@+id/progressBar2"

        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
