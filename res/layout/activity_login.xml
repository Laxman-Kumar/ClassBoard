<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shared.myprojectversion_1.LoginActivity"
    android:alpha="0.9"
    android:background="@drawable/backgroundimage"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView

        android:id="@+id/loginLogo"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:layout_marginTop="42dp"
        android:src="@drawable/logo" />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="263dp"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="46dp"
        android:layout_weight="0.22">

    <EditText
        android:id="@+id/loginUsername"
        android:layout_gravity="center"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:alpha="0.6"
        android:background="@drawable/buttom_shape"
        android:drawableStart="@drawable/ic_action_name"
        android:hint="email"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@android:color/darker_gray" />


    <EditText
        android:layout_gravity="center"
        android:id="@+id/loginPassword"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttom_shape"
        android:alpha="0.6"
        android:drawableStart="@drawable/pass_icon"
        android:inputType="textPassword"
        android:hint="@string/hint_pass"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@android:color/darker_gray"
        />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:text="@string/login_button"
        />

    <TextView
        android:id="@+id/loginForgotPass"
        android:layout_gravity="center"
        android:layout_width="244dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="@string/forgotPass"
        />
    <TextView
        android:id="@+id/loginNewUser"
        android:layout_gravity="center"
        android:layout_width="244dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="@string/newUser"
        android:textColor="#E69F00"
        android:textStyle="bold"
        />

    </LinearLayout>
</LinearLayout>
